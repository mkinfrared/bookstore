{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "./build",
    "baseUrl": "src",
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@db/*": ["db/*"],
      "@middleware/*": ["middleware/*"],
      "@public/*": ["public/*"],
      "@resolvers/*": ["resolvers/*"],
      "@routes/*": ["routes/*"],
      "@type/*": ["type/*"],
      "@util/*": ["util/*"]
    },
    "plugins": [{ "transform": "typescript-transform-paths" }]
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.tsx", "./src/**/*.ts"]
}
