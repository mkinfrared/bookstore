{
  "name": "@monorepo/server",
  "version": "0.0.1",
  "description": "A starting point for Node.js express apps with TypeScript",
  "main": "build/server.js",
  "license": "MIT",
  "scripts": {
    "build": "cross-env NODE_ENV=production yarn build:ts && yarn copy-static-assets",
    "serve": "node build/server.js",
    "start": "yarn gen-schema-types && ts-node-dev --clear -C ttypescript src/server.ts",
    "test": "cross-env NODE_ENV=test jest --forceExit --coverage --verbose",
    "test:server": "cross-env NODE_ENV=test ts-node src/server.ts",
    "ci": "start-server-and-test test:server http://localhost:4001 test",
    "build:ts": "yarn gen-schema-types && ttsc",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "coverage": "open-cli ./coverage/lcov-report/index.html",
    "gen-schema-types": "gql2ts ./src/schema/schema.graphql -o src/type/schema.d.ts"
  },
  "dependencies": {
    "@bookstore/common": "0.0.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "express-session": "^1.16.2",
    "graphql-import": "^0.7.1",
    "graphql-yoga": "^1.18.2",
    "lusca": "^1.6.1",
    "pg": "^7.12.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.18",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.17.1",
    "@types/compression": "^1.0.1",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.1",
    "@types/express-session": "^1.15.14",
    "@types/jest": "^24.0.18",
    "@types/lusca": "^1.6.1",
    "@types/node": "^12.7.2",
    "@types/shelljs": "^0.8.5",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^3.4.5",
    "chai": "^4.2.0",
    "concurrently": "^4.1.2",
    "cross-env": "^5.2.0",
    "gql2ts": "^1.10.1",
    "graphql-request": "^1.8.2",
    "jest": "24.8.0",
    "open-cli": "^5.0.0",
    "shelljs": "^0.8.3",
    "start-server-and-test": "^1.10.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "ts-node-dev": "^1.0.0-pre.41",
    "ttypescript": "^1.5.7",
    "typescript-transform-paths": "^1.1.10"
  }
}
